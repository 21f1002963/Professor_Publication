{
  "version": 2,
  "builds": [
    {
      "src": "Backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "Backend/index.js"
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri",
    "TOKEN": "@token"
  }
}